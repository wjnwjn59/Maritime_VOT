{
    "python.defaultInterpreterPath": "/opt/miniconda3/envs/thinh_simtrack/bin/python",
    "python.terminal.activateEnvironment": true,
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python.analysis.extraPaths": [
        "${workspaceFolder}",
        "${workspaceFolder}/lib",
        "${workspaceFolder}/tracking"
